@{

}
<style>
    .login-outer {
        min-height: calc(100vh - 72px);
    }

        .login-outer .container {
            max-width: 500px;
        }
</style>
<div class="login-outer d-flex align-items-center py-3">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 class="m-0">Login</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("LoginAsync", "Account", FormMethod.Post, new { id = "form1" }))
                {
                    @if (!String.IsNullOrEmpty(ViewBag.Error))
                    {
                        <p class="badge-danger">@ViewBag.Error</p>
                    }
                    <div class="form-group">
                        <label for="defaultForm-email">My email is</label>
                        @*<input type="text" name="defaultForm-email" placeholder="Email Address" class="form-control m-0" id="defaultForm-email" [(ngModel)]="loginModel.Email">*@
                        @Html.TextBox("userName", null, new { @class = "form-control m-0" })
                    </div>
                        <div class="form-group">
                            <label for="defaultForm-password">My password is</label>
                            @*<input autocomplete="off" type="password" name="Password" placeholder="Password" id="defaultForm-password" class="form-control m-0" [(ngModel)]="loginModel.Password">*@
                            @Html.TextBox("Password", null, new { @class = "form-control m-0", @type = "password" })
                        </div>
                        <div class="d-flex align-items-center">
                            @*<button class="btn btn-outline-primary" (click)="login(loginModel)">Log In</button>*@
                            <input type="submit" value="Log In" name="Log In" class="btn btn-outline-primary" />
                            <a routerLink="../forgotpassword" class="ml-auto">Forgot password ?</a>
                        </div>
                }
                <div class="or"></div>
                <h5 class="text-center mb-3">Login Using Microsoft Account</h5>
                <div class="d-flex justify-content-center mb-3">
                    <form>
                        <button class="btn-circle btn-outline-twitter" asp-area="" asp-controller="Account" asp-action="Signin">
                            <span class="btn-circle-inner"><i class="fa fa-windows fa-2x"></i></span>
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
